
@{
    ViewData["Title"] = "Historial de Ventas";
}
<div class="jumbotron text-center">
    <h1 class="display-4">Historial de Ventas</h1>
    <p class="lead">Consulta el historial de ventas de la clínica con toda la información necesaria.</p>
</div>
<div class="container mt-5">
    <div class="text-end mb-3">
        <button class="btn btn-primary">Exportar Historial</button>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Cliente</th>
                <th>Monto</th>
                <th>Método de Pago</th>
                <th>Servicio</th>
            </tr>
        </thead>
    </table>
</div>
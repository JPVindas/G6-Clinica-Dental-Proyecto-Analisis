@{
    ViewData["Title"] = "Servicios";
}
<script src="~/js/site.js"></script>

<div class="jumbotron text-center">
    <h1 class="display-4">¡Bienvenido a los Servicios!</h1>
    <p class="lead">Aquí podrás encontrar nuestros servicios.</p>
</div>
<div class="card-body" style="font-family: 'Arial', sans-serif; color: #003366;">
    <table class="table table-striped">
        <thead style="background-color: #003366; color: #FFFFFF;">
            <tr>
                <th>ID</th>
                <th>Imagen</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Propósito</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>PROC-LIM1</td>
                <td>
                    <img src="/images/limpieza.jpg" alt="Limpieza" style="width: 80px; height: auto; border-radius: 10px;">
                </td>
                <td>Limpieza</td>
                <td>₡65,000</td>
                <td>Limpieza de los dientes.</td>
                <td>
                    <button class="btn btn-primary btn-sm add-to-cart"
                            data-id="PROC-LIM1"
                            data-name="Limpieza"
                            data-price="65000"
                            data-image="/images/limpieza.jpg"
                            style="background-color: #66b2ff; color: #FFFFFF;">
                        Agregar al Carrito
                    </button>
                </td>
            </tr>
            <tr>
                <td>PROC-RAD1</td>
                <td>
                    <img src="/images/Radiografias.jpg" alt="Radiografías" style="width: 80px; height: auto; border-radius: 10px;">
                </td>
                <td>Radiografías</td>
                <td>₡25,000</td>
                <td>Radiografía para conocer el estado de los dientes.</td>
                <td>
                    <button class="btn btn-primary btn-sm add-to-cart"
                            data-id="PROC-RAD1"
                            data-name="Radiografías"
                            data-price="25000"
                            data-image="/images/Radiografias.jpg"
                            style="background-color: #66b2ff; color: #FFFFFF;">
                        Agregar al Carrito
                    </button>
                </td>
            </tr>
            <tr>
                <td>PROC-CIR1</td>
                <td>
                    <img src="/images/cirugias.jpg" alt="Cirugías" style="width: 80px; height: auto; border-radius: 10px;">
                </td>
                <td>Cirugías</td>
                <td>₡1,800,000</td>
                <td>Cirugías dentales.</td>
                <td>
                    <button class="btn btn-primary btn-sm add-to-cart"
                            data-id="PROC-CIR1"
                            data-name="Cirugías"
                            data-price="1800000"
                            data-image="/images/cirugias.jpg"
                            style="background-color: #66b2ff; color: #FFFFFF;">
                        Agregar al Carrito
                    </button>
                </td>
            </tr>
            <tr>
                <td>PROC-EXT1</td>
                <td>
                    <img src="/images/extracciones.jpg" alt="Extracciones" style="width: 80px; height: auto; border-radius: 10px;">
                </td>
                <td>Extracciones</td>
                <td>₡100,000</td>
                <td>Extracciones dentales.</td>
                <td>
                    <button class="btn btn-primary btn-sm add-to-cart"
                            data-id="PROC-EXT1"
                            data-name="Extracciones"
                            data-price="100000"
                            data-image="/images/extracciones.jpg"
                            style="background-color: #66b2ff; color: #FFFFFF;">
                        Agregar al Carrito
                    </button>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<style>
    .card-body {
        margin-top: 20px;
        background-color: #F8F9FA;
        padding: 20px;
    }

    .table {
        width: 100%;
    }

    .btn {
        background-color: #66b2ff;
        color: #fff;
    }

        .btn:hover {
            background-color: #003366;
            transform: scale(1.05);
        }

    img {
        width: 80px;
        height: auto;
        border-radius: 10px;
    }
</style>

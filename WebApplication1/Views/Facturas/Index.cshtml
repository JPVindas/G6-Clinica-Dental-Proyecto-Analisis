@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<WebApplication1.Models.FacturaModel>


@{
    ViewData["Title"] = "Gestión de Facturas";
}

<div class="container mt-4">
    <div class="card shadow-lg" style="border-radius: 10px;">
        <div class="card-header text-white text-center" style="background-color: #003366; font-size: 1.5rem; font-family: 'Poppins', sans-serif;">
            📋 Listado de Facturas
        </div>
        <div class="card-body" style="font-family: 'Poppins', sans-serif; color: #003366;">
            @if (!Model.Any())
            {
                <div class="alert alert-warning text-center fw-bold">
                    ❌ No hay facturas disponibles.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover text-center">
                        <thead style="background-color: #003366; color: white;">
                            <tr>
                                <th># Factura</th>
                                <th>Cliente</th>
                                <th>Fecha</th>
                                <th>Método de Pago</th>
                                <th>Correo</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.IdFactura</td>
                                    <td>@item.NombreCliente @item.ApellidosCliente</td>
                                    <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                                    <td>@(item.MetodoPago?.Nombre ?? "No especificado")</td>
                                    <td>@item.CorreoCliente</td>
                                    <td>
                                        <a class="btn btn-outline-primary btn-sm fw-bold"
                                           asp-controller="Carrito"
                                           asp-action="GenerarFacturaPDF"
                                           asp-route-idCompra="@item.IdCompra"
                                           target="_blank"
                                           title="Ver factura en PDF">
                                            <i class="bi bi-receipt"></i> Ver Factura
                                        </a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="text-center mt-4">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions
           {
               UlElementClasses = new[] { "pagination", "justify-content-center" },
               LiElementClasses = new[] { "page-item" },
               PageClasses = new[] { "page-link" }
           })
                </div>
            }
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
<style>
    .card {
        border-radius: 10px;
        border: 1px solid #E6E6E6;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .pagination .page-item {
        margin: 2px;
    }

    .pagination .page-link {
        color: #003366 !important;
        background-color: #fff;
        border: 1px solid #003366;
        padding: 8px 12px;
        font-size: 14px;
        font-weight: bold;
        border-radius: 6px;
        transition: background-color 0.2s;
    }

    .pagination .active .page-link {
        background-color: #003366 !important;
        color: white !important;
    }

    .pagination .page-link:hover {
        background-color: #66b2ff !important;
        color: white !important;
    }

    /* 🔹 Tabla Responsiva */
    .table-responsive {
        width: 100%;
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
        margin-top: 10px;
        border-radius: 8px;
    }
</style>
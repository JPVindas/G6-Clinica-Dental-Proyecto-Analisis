@{
    ViewData["Title"] = "Contáctanos";
}

<!-- HERO -->
<div class="jumbotron text-center bg-light py-5 mb-5 shadow-sm rounded">
    <h1 class="display-5 fw-bold text-primary">Contáctanos</h1>
    <p class="lead text-muted">Estamos aquí para ayudarte. Descubre cómo puedes comunicarte con nosotros y dónde encontrarnos.</p>
</div>

<!-- REDES SOCIALES -->
<div class="container mb-5">
    <div class="row g-4">
        <div class="col-md-4 d-flex">
            <div class="card text-center flex-fill contact-card shadow-lg border-0">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <i class="bi bi-instagram fs-1 mb-3 text-instagram"></i>
                        <h5 class="card-title fw-bold">Instagram</h5>
                        <p class="card-text text-muted">Síguenos para ver nuestras promociones y novedades.</p>
                    </div>
                    <a href="https://www.instagram.com" target="_blank" class="btn btn-primary mt-3">
                        <i class="bi bi-instagram"></i> Visítanos
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4 d-flex">
            <div class="card text-center flex-fill contact-card shadow-lg border-0">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <i class="bi bi-whatsapp fs-1 mb-3 text-success"></i>
                        <h5 class="card-title fw-bold">WhatsApp</h5>
                        <p class="card-text text-muted">Agenda tu cita o realiza consultas al instante.</p>
                    </div>
                    <a href="https://wa.me/1234567890" target="_blank" class="btn btn-success mt-3">
                        <i class="bi bi-whatsapp"></i> Escríbenos
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4 d-flex">
            <div class="card text-center flex-fill contact-card shadow-lg border-0">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <i class="bi bi-facebook fs-1 mb-3 text-facebook"></i>
                        <h5 class="card-title fw-bold">Facebook</h5>
                        <p class="card-text text-muted">Entérate de nuestras noticias y participa en sorteos.</p>
                    </div>
                    <a href="https://www.facebook.com" target="_blank" class="btn btn-primary mt-3">
                        <i class="bi bi-facebook"></i> Visítanos
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- MAPA -->
<div class="container mb-5">
    <h2 class="text-center fw-bold mb-4">Nuestra Ubicación</h2>
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="ratio ratio-16x9 shadow rounded">
                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d15718.306676237587!2d-84.21207!3d9.9691348!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8fa0f9b6515ecb4f%3A0x57161815d70fd572!2sClinica%20Dental%20San%20Rafael!5e0!3m2!1ses!2scr!4v1733807295631!5m2!1ses!2scr"
                        allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
</div>

<!-- INFORMACIÓN DE CONTACTO -->
<div class="container mb-5">
    <h2 class="text-center fw-bold mb-4">Información de Contacto</h2>
    <div class="row g-4 text-center">
        <div class="col-md-6">
            <div class="bg-light p-4 rounded shadow-sm h-100">
                <h5 class="fw-bold mb-2"><i class="bi bi-telephone-fill me-2 text-primary"></i>Teléfono</h5>
                <p class="mb-0 fs-5"><a href="tel:+50612345678" class="text-dark text-decoration-none">+506 1234-5678</a></p>
            </div>
        </div>
        <div class="col-md-6">
            <div class="bg-light p-4 rounded shadow-sm h-100">
                <h5 class="fw-bold mb-2"><i class="bi bi-envelope-fill me-2 text-primary"></i>Correo Electrónico</h5>
                <p class="mb-0 fs-5"><a href="mailto:info@clinicasanrafael.com" class="text-dark text-decoration-none">info@clinicasanrafael.com</a></p>
            </div>
        </div>
    </div>
</div>

<!-- ESTILOS PERSONALIZADOS -->
<style>
    .contact-card {
        min-height: 100%;
        transition: transform 0.3s ease;
    }

        .contact-card:hover {
            transform: translateY(-8px);
        }

    .text-instagram {
        color: #C13584;
    }

    .text-facebook {
        color: #3b5998;
    }

    .btn-primary {
        background-color: #003366;
        border: none;
    }

        .btn-primary:hover {
            background-color: #00264d;
        }

    .ratio iframe {
        border-radius: 12px;
    }

    .card-title {
        color: #003366;
    }

    .lead {
        font-weight: 500;
    }

    .shadow-lg {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

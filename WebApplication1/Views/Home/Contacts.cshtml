@{
    ViewData["Title"] = "Contáctanos";
}

<div class="jumbotron text-center">
    <h1 class="display-4">Contáctanos</h1>
    <p class="lead">Estamos aquí para ayudarte. Encuentra las formas de contactarnos y nuestra ubicación.</p>
</div>

<div class="container mt-5">
    <div class="row text-center">
        
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Instagram</h5>
                    <p class="card-text">Síguenos en Instagram para conocer más sobre nuestros servicios y promociones.</p>
                    <a href="https://www.instagram.com" target="_blank" class="btn btn-primary">
                        <i class="bi bi-instagram"></i> Visítanos
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">WhatsApp</h5>
                    <p class="card-text">Contáctanos directamente por WhatsApp para agendar citas o resolver tus dudas.</p>
                    <a href="https://wa.me/1234567890" target="_blank" class="btn btn-success">
                        <i class="bi bi-whatsapp"></i> Escríbenos
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Facebook</h5>
                    <p class="card-text">Visita nuestra página de Facebook para mantenerte al tanto de nuestras actualizaciones.</p>
                    <a href="https://www.facebook.com" target="_blank" class="btn btn-primary">
                        <i class="bi bi-facebook"></i> Visítanos
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5">
    <h2 class="text-center mb-4">Nuestra Ubicación</h2>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="embed-responsive embed-responsive-16by9">
                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d15718.306676237587!2d-84.21207!3d9.9691348!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8fa0f9b6515ecb4f%3A0x57161815d70fd572!2sClinica%20Dental%20San%20Rafael!5e0!3m2!1ses!2scr!4v1733807295631!5m2!1ses!2scr"
                        width="100%"
                        height="450"
                        style="border:0;"
                        allowfullscreen=""
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade">
                </iframe>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5">
    <h2 class="text-center mb-4">Información de Contacto</h2>
    <div class="row text-center">
        <div class="col-md-6">
            <h5>Teléfono</h5>
            <p><a href="tel:+50612345678">+506 1234-5678</a></p>
        </div>
        <div class="col-md-6">
            <h5>Correo Electrónico</h5>
            <p><a href="mailto:info@clinicasanrafael.com">info@clinicasanrafael.com</a></p>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
    }

    .card-title {
        font-size: 1.25rem;
        color: #003366;
    }

    .btn-primary {
        background-color: #003366;
        border: none;
    }

    .btn-success {
        background-color: #25D366;
        border: none;
    }

    .btn-primary:hover,
    .btn-success:hover {
        opacity: 0.9;
    }

    iframe {
        border-radius: 10px;
    }
</style>

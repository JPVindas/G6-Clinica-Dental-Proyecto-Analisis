@model WebApplication1.Models.UsuariosModel

@{
    ViewData["Title"] = "Registro de Usuario";
}

<div class="register-container">
    <div class="register-card shadow-lg">
        <div class="card-header text-center">
            <div class="icon-animation mb-3">
                <img src="https://cdn-icons-png.flaticon.com/512/18470/18470469.png" alt="Ícono de Higiene Dental" width="60" />
            </div>
            <h2 class="text-white">Registro de Usuario</h2>
            <p class="subtitle">Crea tu cuenta para acceder al portal de pacientes</p>
        </div>



        <div class="card-body">
            <form asp-action="Registrar" asp-controller="Registro" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="RolId" value="3" />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label class="form-label">Nombre de usuario</label>
                    <input asp-for="NombreUsuario" class="form-control" placeholder="Ejemplo: usuario123" required />
                    <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Correo electrónico</label>
                    <input asp-for="CorreoElectronico" type="email" class="form-control" placeholder="ejemplo@correo.com" required />
                    <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Contraseña</label>
                    <input asp-for="Contrasena" type="password" class="form-control" placeholder="Debe tener al menos 6 caracteres" required />
                    <span asp-validation-for="Contrasena" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Nombre</label>
                    <input asp-for="Nombre" class="form-control" placeholder="Tu nombre" required />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Apellidos</label>
                    <input asp-for="Apellido" class="form-control" placeholder="Tus apellidos" required />
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Cédula</label>
                    <input asp-for="Cedula" class="form-control" placeholder="Ejemplo: 12345678" required />
                    <span asp-validation-for="Cedula" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Teléfono</label>
                    <input asp-for="Telefono" class="form-control" placeholder="Ejemplo: 8888-8888" required />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn-login">
                        <i class="bi bi-check-circle"></i> Registrarse
                    </button>
                    <a asp-controller="Login" asp-action="Login" class="btn-secondary-link">
                        <i class="bi bi-arrow-left-circle"></i> Volver al Login
                    </a>
                </div>
            </form>

            <hr class="my-4" />
            <p class="text-muted text-center small">🦷 El primer paso para tu salud dental empieza aquí.</p>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(to right, #003366, #005999);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .register-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 30px;
    }

    .register-card {
        background-color: #ffffff;
        width: 100%;
        max-width: 600px;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    }

    .card-header {
        background-color: #003366;
        padding: 30px 20px 20px;
    }

    .card-header h2 {
        font-family: 'Merriweather', serif;
        font-size: 1.8rem;
        color: #ffffff;
        margin-bottom: 10px;
    }

    .subtitle {
        font-size: 0.95rem;
        color: #cce6ff;
    }

    .card-body {
        padding: 25px;
        color: #003366;
    }

    .form-label {
        font-weight: bold;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #ccc;
    }

    .btn-login {
        background-color: #003366;
        color: #ffffff;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: bold;
        transition: background-color 0.3s, transform 0.2s;
    }

    .btn-login:hover {
        background-color: #005999;
        transform: scale(1.03);
    }

    .btn-secondary-link {
        background-color: #e9ecef;
        color: #003366;
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-secondary-link:hover {
        background-color: #d1d1d1;
        transform: scale(1.02);
        text-decoration: none;
    }

    .alert-danger {
        font-size: 0.9rem;
    }

    .icon-animation img {
        animation: bounce-glow 2.5s infinite ease-in-out;
        filter: drop-shadow(0 0 8px #ffffff);
        transition: transform 0.3s ease;
    }

   
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

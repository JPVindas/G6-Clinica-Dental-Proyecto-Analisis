@model WebApplication1.Models.UsuariosModel

@{
    ViewData["Title"] = "Registro de Usuario";
}

<div class="jumbotron text-center">
    <h1 class="display-4">📝 Registro de Usuario</h1>
    <p class="lead">Crea tu cuenta para acceder al portal de pacientes.</p>
</div>

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-6">
        <div class="bg-white p-4 shadow-sm rounded">
            <form asp-action="Registrar" asp-controller="Registro" method="post">
                @Html.AntiForgeryToken()

                <!-- Campo oculto para RolId de paciente -->
                <input type="hidden" asp-for="RolId" value="3" />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Nombre de usuario</label>
                    <input asp-for="NombreUsuario" class="form-control" placeholder="Ejemplo: usuario123" required />
                    <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Correo electrónico</label>
                    <input asp-for="CorreoElectronico" type="email" class="form-control" placeholder="ejemplo@correo.com" required />
                    <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Contraseña</label>
                    <input asp-for="Contrasena" type="password" class="form-control" placeholder="Debe tener al menos 6 caracteres" required />
                    <span asp-validation-for="Contrasena" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Nombre</label>
                    <input asp-for="Nombre" class="form-control" placeholder="Tu nombre" required />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Apellidos</label>
                    <input asp-for="Apellido" class="form-control" placeholder="Tus apellidos" required />
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Cédula</label>
                    <input asp-for="Cedula" class="form-control" placeholder="Ejemplo: 12345678" required />
                    <span asp-validation-for="Cedula" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Teléfono</label>
                    <input asp-for="Telefono" class="form-control" placeholder="Ejemplo: 8888-8888" required />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-start gap-2 mt-4">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Registrarse
                    </button>

                    <a asp-controller="Login" asp-action="Login" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Volver al Login
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

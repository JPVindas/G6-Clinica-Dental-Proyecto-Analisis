@model WebApplication1.Models.ProductosModel

@{
    ViewData["Title"] = "Editar Stock";
}

<div class="jumbotron text-center">
    <h1 class="display-4">Editar Producto</h1>
</div>

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
        <div class="bg-white p-4 shadow-sm rounded">

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success text-center">
                    ✅ @TempData["SuccessMessage"]
                </div>
            }

            <form asp-action="Editar" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Nombre" />
                <input type="hidden" asp-for="Descripcion" />
                <input type="hidden" asp-for="Marca" />
                <input type="hidden" asp-for="Precio" />
                <input type="hidden" asp-for="UrlImagen" />

                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label">Nombre del Producto</label>
                    <input asp-for="Nombre" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="Stock" class="form-label">Stock Actual</label>
                    <input asp-for="Stock" class="form-control" type="number" min="0" required />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>

                <div class="mt-3 d-flex justify-content-between">
                    <a asp-action="Inventario" class="btn btn-primary">Cancelar</a>
                    <button type="submit" class="btn btn-primary">Guardar cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>

    .btn:hover {
        transform: scale(1.05);
    }
</style>

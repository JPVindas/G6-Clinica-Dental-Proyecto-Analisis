@model WebApplication1.Models.ProductosModel

@{
    ViewData["Title"] = "Editar Stock";
}

<div class="container mt-4">
    <div class="card shadow-lg" style="border-radius: 10px;">
        <div class="card-header text-white text-center" style="background-color: #003366; font-size: 1.5rem; font-family: 'Merriweather', serif;">
            ✏️ Editar Stock del Producto
        </div>
        <div class="card-body" style="font-family: 'Arial', sans-serif; color: #003366;">

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success text-center">
                    ✅ @TempData["SuccessMessage"]
                </div>
            }

            <form asp-action="Editar" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Nombre" />
                <input type="hidden" asp-for="Descripcion" />
                <input type="hidden" asp-for="Marca" />
                <input type="hidden" asp-for="Precio" />
                <input type="hidden" asp-for="UrlImagen" />

                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label">Nombre del Producto</label>
                    <input asp-for="Nombre" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="Stock" class="form-label">Stock Actual</label>
                    <input asp-for="Stock" class="form-control" type="number" min="0" required />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>

                <div class="mt-3 d-flex justify-content-between">
                    <a asp-action="Inventario" class="btn btn-secondary">⬅️ Volver</a>
                    <button type="submit" class="btn btn-primary">💾 Guardar cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 600px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn:hover {
        transform: scale(1.05);
    }
</style>

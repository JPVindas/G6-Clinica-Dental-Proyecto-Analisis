@model WebApplication1.Models.ProductosModel

@{
    ViewData["Title"] = "Editar Stock";
}

<div class="container mt-4">
    <div class="card shadow-lg" style="border-radius: 10px;">
        <div class="card-header text-white text-center" style="background-color: #003366; font-size: 1.5rem; font-family: 'Merriweather', serif;">
            Editar Stock del Producto
        </div>
        <div class="card-body" style="font-family: 'Arial', sans-serif; color: #003366;">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            <form asp-action="Editar" method="post">
                @Html.AntiForgeryToken()

                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    <label asp-for="Nombre" class="control-label">Nombre del Producto</label>
                    <input asp-for="Nombre" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="Stock" class="control-label">Stock Actual</label>
                    <input asp-for="Stock" class="form-control" type="number" min="0" required />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>

                <div class="mt-3 d-flex justify-content-between">
                    <a asp-action="Inventario" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary">Guardar cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 600px;
    }
</style>

@model WebApplication1.Models.ProductosModel

@{
    ViewData["Title"] = "Eliminar Inventario";
}

<div class="container mt-4">
    <div class="card shadow-lg" style="border-radius: 10px;">
        <div class="card-header text-white text-center" style="background-color: #D9534F; font-size: 1.5rem; font-family: 'Merriweather', serif;">
            Confirmar Eliminación de Producto
        </div>
        <div class="card-body text-center" style="font-family: 'Arial', sans-serif; color: #333;">
            <p class="lead">¿Estás seguro de que deseas eliminar este producto del inventario?</p>

            <table class="table table-bordered mt-3">
                <tr>
                    <th>ID Producto:</th>
                    <td>@Model.Id</td>
                </tr>
                <tr>
                    <th>Nombre Producto:</th>
                    <td>@Model.Nombre</td>
                </tr>
                <tr>
                    <th>Stock Actual:</th>
                    <td>@Model.Stock</td>
                </tr>
            </table>

            <form asp-action="Eliminar" method="post">
                @Html.AntiForgeryToken() <!-- Para proteger contra ataques CSRF -->
                @Html.HiddenFor(model => model.Id)

                <div class="d-flex justify-content-center mt-3">
                    <a asp-action="Index" class="btn btn-secondary me-3">Cancelar</a>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 600px;
    }
</style>


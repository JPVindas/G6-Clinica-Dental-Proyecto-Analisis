@model WebApplication1.Models.InventarioModel

@{
    ViewData["Title"] = "Eliminar Inventario";
}

<div class="container mt-5">
    <div class="card shadow-lg" style="border-radius: 10px;">
        <div class="card-header text-white text-center" style="background-color: #990000; font-size: 1.5rem; font-family: 'Merriweather', serif;">
            Eliminar Inventario
        </div>
        <div class="card-body text-center" style="font-family: 'Arial', sans-serif; color: #003366;">
            <h4>¿Estás seguro de que deseas eliminar este registro?</h4>
            <p class="text-danger">Esta acción no se puede deshacer.</p>

            <hr>

            <dl class="row">
                <dt class="col-sm-4">ID de Inventario:</dt>
                <dd class="col-sm-8">@Model.Id_Inventario</dd>

                <dt class="col-sm-4">Producto:</dt>
                <dd class="col-sm-8">@Model.Producto.Nombre</dd>

                <dt class="col-sm-4">Cantidad Actual:</dt>
                <dd class="col-sm-8">@Model.Cantidad_Actual</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id_Inventario" />

                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Eliminar
                </button>

                <a asp-action="Inventario" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancelar
                </a>
            </form>
        </div>
    </div>
</div>

<style>
    .card {
        max-width: 500px;
        margin: auto;
    }
</style>

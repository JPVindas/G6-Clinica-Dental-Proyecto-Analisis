@model IEnumerable<WebApplication1.Models.ProductosModel>

@{
    ViewData["Title"] = "Gestión de Inventario";
}

<div class="jumbotron text-center">
    <h1 class="display-4">📦 Gestión de Inventario</h1>
    <p class="lead">Aquí podrás gestionar el stock de productos de manera eficiente.</p>
</div>

<div class="container mt-5">
    <div class="card shadow-lg" style="border-radius: 10px;">
        <div class="card-header text-white text-center" style="background-color: #003366; font-size: 1.5rem; font-family: 'Merriweather', serif;">
            📋 Listado de Productos
        </div>
        <div class="card-body" style="font-family: 'Arial', sans-serif; color: #003366;">

            <div class="d-flex justify-content-between mb-3">
                <a asp-controller="Producto" asp-action="AgregarProducto" class="btn btn-success">
                    ➕ Agregar Producto
                </a>
                <a href="#" onclick="location.reload();" class="btn btn-info">
                    🔄 Refrescar
                </a>
            </div>

            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-warning text-center" role="alert">
                    ❌ No hay productos en el inventario.
                </div>
            }
            else
            {
                <table class="table table-striped text-center">
                    <thead style="background-color: #003366; color: #FFFFFF;">
                        <tr>
                            <th>ID</th>
                            <th>Nombre del Producto</th>
                            <th>Stock</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Nombre</td>
                                <td>@item.Stock</td>
                                <td>
                                    <a asp-controller="Inventario" asp-action="Editar" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                        ✏️ Modificar
                                    </a>
                                    <a asp-controller="Inventario" asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                        ❌ Eliminar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 900px;
    }

    .table th {
        background-color: #003366;
        color: white;
        text-align: center;
    }

    .table td {
        text-align: center;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-success {
        background-color: #28a745;
        border: none;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-info {
        background-color: #17a2b8;
        border: none;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn:hover {
        transform: scale(1.05);
    }
</style>

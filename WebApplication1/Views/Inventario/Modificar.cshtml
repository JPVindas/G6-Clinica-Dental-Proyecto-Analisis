@model WebApplication1.Models.InventarioModel

@{
    ViewData["Title"] = "Modificar Inventario";
}

<div class="container mt-4">
    <div class="card shadow-lg" style="border-radius: 10px;">
        <div class="card-header text-white text-center" style="background-color: #003366; font-size: 1.5rem; font-family: 'Merriweather', serif;">
            Modificar Inventario
        </div>
        <div class="card-body" style="font-family: 'Arial', sans-serif; color: #003366;">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id_Inventario" />

                <div class="mb-3">
                    <label class="form-label">Producto</label>
                    <input type="text" class="form-control" value="@ViewBag.NombreProducto" disabled />
                </div>

                <div class="mb-3">
                    <label for="Cantidad_Actual" class="form-label">Cantidad</label>
                    <input asp-for="Cantidad_Actual" type="number" class="form-control" min="1" required />
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Inventario" class="btn btn-secondary">Volver</a>
                    <button type="submit" class="btn btn-primary" style="background-color: #66b2ff;">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 600px;
    }
</style>

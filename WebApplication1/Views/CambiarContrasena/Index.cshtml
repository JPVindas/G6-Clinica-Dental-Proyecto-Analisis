@{
    ViewData["Title"] = "Cambiar Contraseña";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
        <strong>@TempData["SuccessMessage"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
        <strong>@TempData["ErrorMessage"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="jumbotron text-center">
    <h1 class="display-4">🔒 Cambiar Contraseña</h1>
    <p class="lead">Actualiza tu contraseña de forma segura.</p>
</div>

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <div class="card-body">
            <form asp-controller="CambiarContrasena" asp-action="Index" method="post" class="row g-3">
                @Html.AntiForgeryToken()

                <div class="col-md-12">
                    <label for="actual" class="form-label fw-bold">Contraseña Actual</label>
                    <input type="password" class="form-control" name="actual" id="actual" required />
                </div>

                <div class="col-md-12">
                    <label for="nueva" class="form-label fw-bold">Nueva Contraseña</label>
                    <input type="password" class="form-control" name="nueva" id="nueva" required minlength="6" />
                </div>

                <div class="col-md-12">
                    <label for="confirmar" class="form-label fw-bold">Confirmar Nueva Contraseña</label>
                    <input type="password" class="form-control" name="confirmar" id="confirmar" required minlength="6" />
                </div>

                <div class="col-md-12 d-flex justify-content-start mt-4 gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Guardar
                    </button>

                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />

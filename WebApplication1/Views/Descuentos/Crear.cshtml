@model WebApplication1.Models.DescuentoModel
@using System.Globalization

@{
    ViewData["Title"] = "Crear Descuento";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <div class="card-body">

            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

            <form asp-controller="Descuentos" asp-action="Crear" method="post" class="row g-3">
                @Html.AntiForgeryToken()

                <div class="col-md-12">
                    <label asp-for="Codigo" class="form-label fw-bold">Código del Descuento</label>
                    <input asp-for="Codigo" class="form-control" />
                    <span asp-validation-for="Codigo" class="text-danger"></span>
                </div>

                <div class="col-md-12">
                    <label asp-for="PorcentajeDescuentoString" class="form-label fw-bold">Porcentaje de Descuento</label>
                    <input asp-for="PorcentajeDescuentoString" class="form-control" placeholder="Ejemplo: 15%" />
                    <span asp-validation-for="PorcentajeDescuentoString" class="text-danger"></span>
                </div>

                <div class="col-md-12 d-flex justify-content-start mt-4 gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Guardar
                    </button>
                    <a asp-controller="Descuentos" asp-action="Descuentos" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Cancelar
                    </a>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />

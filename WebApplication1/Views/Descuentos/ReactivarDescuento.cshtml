@model WebApplication1.Models.DescuentoModel
@using System.Globalization

@{
    ViewData["Title"] = "Reactivar Descuento";
}

<div class="jumbotron text-center">
    <h1 class="display-4">Reactivar Descuento</h1>
    <p class="lead">¿Estás seguro de que deseas reactivar este descuento?</p>
</div>

<div class="container mt-4">
    <div class="card shadow-lg" style="border-radius: 10px;">
        <div class="card-header text-white text-center" style="background-color: #003366; font-size: 1.5rem;">
            Reactivar Descuento
        </div>
        <div class="card-body" style="color: #003366;">
            <div class="mb-3">
                <label class="form-label"><strong>Código:</strong></label>
                <p>@Model.Codigo</p>
            </div>
            <div class="mb-3">
                <label class="form-label"><strong>Porcentaje de Descuento:</strong></label>
                <p>@Model.PorcentajeDescuento.ToString("N2", CultureInfo.InvariantCulture)%</p>
            </div>
            <div class="mb-3">
                <label class="form-label"><strong>Estado Actual:</strong></label>
                <p>
                    @if (!Model.Estado)
                    {
                        <span class="badge bg-danger">Archivado</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                </p>
            </div>

            <form asp-action="ReactivarDescuento" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="IdDescuento" />
                <button type="submit" class="btn btn-success w-100 fw-bold" onclick="return confirm('¿Estás seguro de reactivar este descuento?');">
                    <i class="bi bi-check-circle"></i> Reactivar Descuento
                </button>
            </form>
            <div class="mt-3">
                <a asp-action="Descuentos" class="btn btn-secondary w-100 fw-bold">
                    <i class="bi bi-arrow-left-circle"></i> Volver a Descuentos
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    /* Estilos personalizados para el botón en verde */
    button.btn.btn-success {
        background-color: #28a745 !important; /* Verde Bootstrap */
        border-color: #28a745 !important;
        color: #ffffff !important;
    }

        button.btn.btn-success:hover {
            background-color: #218838 !important;
            border-color: #1e7e34 !important;
            color: #ffffff !important;
        }

</style>

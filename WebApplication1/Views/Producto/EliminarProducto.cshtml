@model WebApplication1.Models.ProductosModel

@{
    ViewData["Title"] = "EliminarProducto";
}

<div class="jumbotron text-center">
    <h1 class="display-4">Desactivar Producto</h1>
</div>

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
        <div class="bg-white p-4 shadow-sm rounded">
        <div class="card-body text-center">
            <p class="lead">¿Estás seguro de que deseas desactivar este producto?</p>

            <img src="@Url.Content(Model.UrlImagen)" class="img-fluid mb-3 rounded" alt="@Model.Nombre" style="width: 200px; height: auto;">

            <h4 class="fw-bold">@Model.Nombre</h4>
            <p class="text-muted">@Model.Marca</p>
            <p class="text-muted">@Model.Descripcion</p>
            <p class="text-primary fw-bold">Precio: ₡@Model.Precio.ToString("N0")</p>

            <!-- Botones de confirmación -->
            <form asp-action="EliminarProducto" method="post">

                <input type="hidden" name="id" value="@Model.Id" />

                <button type="submit" class="btn btn-danger">
                    <i></i> Desactivar
                </button>

                <a asp-action="Productos" class="btn btn-primary">
                    <i></i> Cancelar
                </a>
            </form>
        </div>
    </div>
</div>

<!-- Estilos personalizados -->
<style>

    .card {
        border-radius: 10px;
    }

    .btn {
        transition: 0.3s;
    }

    .btn-danger:hover {
        background-color: #c82333;
        transform: scale(1.05);
    }

    .btn-secondary:hover {
        transform: scale(1.05);
    }
</style>

<!-- Importar Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">


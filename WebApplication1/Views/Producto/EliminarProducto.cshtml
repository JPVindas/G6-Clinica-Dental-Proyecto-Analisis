@model WebApplication1.Models.ProductosModel

@{
    ViewData["Title"] = "EliminarProducto";
}

<div class="container mt-5">
    <div class="card shadow-lg border-danger">
        <div class="card-header bg-danger text-white text-center">
            <h3><i class="bi bi-exclamation-triangle-fill"></i> Confirmar Eliminación</h3>
        </div>
        <div class="card-body text-center">
            <p class="lead">¿Estás seguro de que deseas eliminar este producto?</p>

            <img src="@Url.Content(Model.UrlImagen)" class="img-fluid mb-3 rounded" alt="@Model.Nombre" style="width: 200px; height: auto;">

            <h4 class="fw-bold">@Model.Nombre</h4>
            <p class="text-muted">@Model.Descripcion</p>
            <p class="text-primary fw-bold">Precio: ₡@Model.Precio.ToString("N0")</p>

            <!-- Botones de confirmación -->
            <form asp-action="EliminarProducto" method="post">

                <input type="hidden" name="id" value="@Model.Id" />

                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Sí, Eliminar
                </button>

                <a asp-action="Productos" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancelar
                </a>
            </form>
        </div>
    </div>
</div>

<!-- Estilos personalizados -->
<style>
    .container {
        max-width: 600px;
    }

    .card {
        border-radius: 10px;
    }

    .btn {
        transition: 0.3s;
    }

    .btn-danger:hover {
        background-color: #c82333;
        transform: scale(1.05);
    }

    .btn-secondary:hover {
        transform: scale(1.05);
    }
</style>

<!-- Importar Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">


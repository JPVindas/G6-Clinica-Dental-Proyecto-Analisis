@{
    ViewData["Title"] = "Inicio de Sesión";
}

<div class="login-container">
    <div class="login-card shadow-lg">
        <div class="card-header text-center">
            <div class="tooth-animation mb-3">
                <img src="https://cdn-icons-png.flaticon.com/512/17976/17976962.png" alt="Logo Cuidado Dental" width="70" />
            </div>

            <h2 class="welcome-text">Bienvenido a Clínica Dental San Rafael</h2>
            <p class="subtitle">Inicia sesión para acceder al sistema</p>
        </div>

        <div class="card-body">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger text-center" role="alert">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            }

            <form asp-action="Login" method="POST">
                <div class="form-group mb-3">
                    <label for="username">Nombre de Usuario</label>
                    <input type="text" id="username" name="username" class="form-control" placeholder="Ejemplo: paciente01" required />
                </div>

                <div class="form-group mb-4">
                    <label for="password">Contraseña</label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="••••••••" required />
                </div>

                <button type="submit" class="btn-login">Iniciar Sesión</button>
            </form>
        </div>

        <div class="card-footer text-center">
            <a asp-controller="RecuperarPassword" asp-action="RecuperarPassword">¿Olvidaste tu contraseña?</a><br />
            <a asp-controller="Registro" asp-action="Registro">¿No tienes una cuenta? Regístrate</a>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(to right, #003366, #005999);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .login-card {
        background-color: #ffffff;
        width: 100%;
        max-width: 430px;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    }

    .card-header {
        background-color: #003366;
        color: #ffffff;
        padding: 30px 20px 20px;
    }

        .card-header h2,
        .welcome-text {
            font-family: 'Merriweather', serif;
            font-size: 1.8rem;
            color: #ffffff !important;
            margin-bottom: 0.5rem;
        }

        .card-header .subtitle {
            font-size: 0.95rem;
            color: #cce6ff;
        }

    .card-body {
        padding: 25px;
        color: #003366;
    }

    .form-group label {
        font-weight: bold;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #ccc;
    }

    .btn-login {
        background-color: #003366;
        color: #ffffff;
        border: none;
        border-radius: 8px;
        width: 100%;
        padding: 12px;
        font-weight: bold;
        transition: background-color 0.3s, transform 0.2s;
    }

        .btn-login:hover {
            background-color: #005999;
            transform: scale(1.03);
        }

    .card-footer {
        padding: 20px;
        background-color: #f8f9fa;
    }

        .card-footer a {
            font-size: 0.9rem;
            color: #005999;
            font-weight: 600;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .card-footer a:hover {
                color: #003366;
            }

    .alert-danger {
        font-size: 0.9rem;
    }

    h1, h2, h3 {
        font-family: 'Merriweather', serif;
        color: #ffffff;
        margin-bottom: 15px;
    }
</style>

@section Scripts {
    <script>
        setTimeout(() => {
            const alert = document.querySelector(".alert-danger");
            if (alert) alert.remove();
        }, 5000);
    </script>
}


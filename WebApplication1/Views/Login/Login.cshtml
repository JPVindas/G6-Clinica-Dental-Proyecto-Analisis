@{
    ViewData["Title"] = "Inicio de Sesión";
}

<div class="login-container mt-5 d-flex justify-content-center align-items-start">
    <div class="card shadow-lg" style="width: 400px; border-radius: 10px;">
        <div class="card-header text-white text-center" style="background-color: #003366; font-size: 1.5rem; font-family: 'Merriweather', serif;">
            Iniciar Sesión
        </div>
        <div class="card-body" style="font-family: 'Arial', sans-serif; color: #003366;">
            <form asp-action="Login" method="POST">
                <div class="mb-3">
                    <label for="username" class="form-label" style="color: #003366;">Nombre de Usuario</label>
                    <input type="text" id="username" name="username" class="form-control" placeholder="Ingresa tu usuario" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label" style="color: #003366;">Contraseña</label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Ingresa tu contraseña" required>
                </div>
                <button type="submit" class="btn w-100" style="background-color: #003366; color: #FFFFFF; font-family: 'Arial Bold', sans-serif;">Iniciar Sesión</button>
            </form>
        </div>
        <div class="card-footer text-center">
            <div class="links mt-3">
                <a asp-controller="RecuperarPassword" asp-action="RecuperarPassword" style="color: #66b2ff;">¿Olvidaste tu contraseña?</a> <br>
                <a asp-controller="Home" asp-action="Registro" style="color: #66b2ff;">¿No tienes una cuenta? Regístrate</a>
            </div>
        </div>
    </div>
</div>

    <style>
        .login-container {
            height: 100vh;
            background-color: #F8F9FA;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .card {
            border: 1px solid #E6E6E6;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #003366;
            color: #FFFFFF;
            font-size: 1.5rem;
            font-family: 'Merriweather', serif;
        }

        .btn {
            font-family: 'Arial Bold', sans-serif;
            background-color: #066b2ff;
            color: #FFFFFF;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            .btn:hover {
                background-color: #003366;
                transform: scale(1.05);
            }

        .links a {
            color: #003366;
            font-family: 'Arial Bold', sans-serif;
            transition: color 0.3s ease;
        }

            .links a:hover {
                color: #FFFFFF;
            }
    </style>
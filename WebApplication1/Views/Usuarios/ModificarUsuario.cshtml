@model WebApplication1.Models.UsuariosModel

@{
    ViewData["Title"] = "Modificar Usuario";
}

<div class="container mt-4 py-3">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card border-0 shadow-lg p-4">
                <div class="text-center mb-4">
                    <h2 class="text-primary fw-bold">
                        <i class="bi bi-person-gear"></i> Modificar Usuario
                    </h2>
                    <p class="text-muted">Actualizá los datos del usuario seleccionado.</p>
                </div>

                <form asp-action="ModificarUsuario" method="post">
                    @Html.AntiForgeryToken()

                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" name="ContrasenaActual" value="@Model.Contrasena" />

                    <!-- Nombre de Usuario -->
                    <div class="mb-3">
                        <label asp-for="NombreUsuario" class="form-label fw-bold">Nombre de Usuario</label>
                        <input asp-for="NombreUsuario" class="form-control" required />
                        <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                    </div>

                    <!-- Correo -->
                    <div class="mb-3">
                        <label asp-for="CorreoElectronico" class="form-label fw-bold">Correo Electrónico</label>
                        <input asp-for="CorreoElectronico" type="email" class="form-control" required />
                        <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                    </div>

                    <!-- Nombre -->
                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label fw-bold">Nombre</label>
                        <input asp-for="Nombre" class="form-control" required />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <!-- Apellido -->
                    <div class="mb-3">
                        <label asp-for="Apellido" class="form-label fw-bold">Apellido</label>
                        <input asp-for="Apellido" class="form-control" required />
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>

                    <!-- Cédula -->
                    <div class="mb-3">
                        <label asp-for="Cedula" class="form-label fw-bold">Cédula</label>
                        <input asp-for="Cedula" class="form-control bg-light" readonly />
                        <span asp-validation-for="Cedula" class="text-danger"></span>
                    </div>

                    <!-- Teléfono -->
                    <div class="mb-3">
                        <label asp-for="Telefono" class="form-label fw-bold">Teléfono</label>
                        <input asp-for="Telefono" class="form-control" required />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>

                    <!-- Rol -->
                    <div class="mb-3">
                        <label asp-for="RolId" class="form-label fw-bold">Rol</label>
                        <select asp-for="RolId" class="form-select" asp-items="ViewBag.Roles"></select>
                        <span asp-validation-for="RolId" class="text-danger"></span>
                    </div>

                    <!-- Cambiar contraseña -->
                    <div class="form-check mb-3">
                        <input type="hidden" name="cambiarContrasena" value="false" />
                        <input type="checkbox" class="form-check-input" id="cambiarContrasena" name="cambiarContrasena" value="true" />
                        <label for="cambiarContrasena" class="form-check-label">Cambiar contraseña</label>
                    </div>

                    <!-- Nueva contraseña -->
                    <div class="mb-4">
                        <label for="passwordField" class="form-label fw-bold">Nueva Contraseña</label>
                        <input type="password" name="Contrasena" id="passwordField" class="form-control" disabled />
                        <span asp-validation-for="Contrasena" class="text-danger"></span>
                    </div>

                    <!-- Botones -->
                    <div class="d-flex justify-content-center gap-3">
                        <button type="submit" class="btn btn-success px-4">
                            <i class="bi bi-check-circle-fill"></i> Guardar
                        </button>
                        <a asp-controller="Usuarios" asp-action="Usuarios" class="btn btn-secondary px-4">
                            <i class="bi bi-arrow-left-circle"></i> Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Script para habilitar o deshabilitar la contraseña -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        let cambiarContrasenaCheckbox = document.getElementById("cambiarContrasena");
        let passwordField = document.getElementById("passwordField");

        if (cambiarContrasenaCheckbox) {
            cambiarContrasenaCheckbox.addEventListener("change", function () {
                passwordField.disabled = !this.checked;
                if (!this.checked) {
                    passwordField.value = ""; // Limpiar campo si no se cambia
                }
            });
        }
    });
</script>

<!-- Estilos -->
<style>
    .container {
        max-width: 1000px;
        padding-top: 3.5rem;
        padding-bottom: 1.5rem;
    }

    .form-label {
        font-weight: bold;
    }

    .form-control, .form-select {
        border-radius: 5px;
    }

    .btn {
        border: none;
        transition: 0.3s;
        padding: 10px 20px;
        font-weight: 500;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
    }

        .btn-success:hover {
            background-color: #218838;
            transform: scale(1.05);
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: scale(1.05);
        }
</style>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
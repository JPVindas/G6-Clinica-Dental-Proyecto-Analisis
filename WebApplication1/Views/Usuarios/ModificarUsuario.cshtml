@model WebApplication1.Models.UsuariosModel

@{
    ViewData["Title"] = "Modificar Usuario";
}

<div class="modify-user-container mt-5 d-flex justify-content-center align-items-start">
    <div class="card shadow-lg" style="width: 500px; border-radius: 10px;">
        <div class="card-header text-white text-center" style="background-color: #003366; font-size: 1.5rem; font-family: 'Merriweather', serif;">
            Modificar Usuario
        </div>
        <div class="card-body" style="font-family: 'Arial', sans-serif; color: #003366;">
            <form asp-action="ModificarUsuario" method="POST">
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label for="NombreUsuario" class="form-label" style="color: #003366;">Nombre de Usuario</label>
                    <input type="text" id="NombreUsuario" name="NombreUsuario" class="form-control" placeholder="Ingrese el nombre de usuario" value="@Model.NombreUsuario">
                </div>
                <div class="mb-3">
                    <label for="firstName" class="form-label" style="color: #003366;">Nombre</label>
                    <input type="text" id="firstName" name="Nombre" class="form-control" placeholder="Ingrese el nombre" value="@Model.Nombre">
                </div>
                <div class="mb-3">
                    <label for="lastName" class="form-label" style="color: #003366;">Apellido</label>
                    <input type="text" id="lastName" name="Apellido" class="form-control" placeholder="Ingrese el apellido" value="@Model.Apellido">
                </div>
                <div class="mb-3">
                    <label for="cellphone" class="form-label" style="color: #003366;">Celular</label>
                    <input type="text" id="cellphone" name="Telefono" class="form-control" placeholder="Ingrese el celular" value="@Model.Telefono">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label" style="color: #003366;">Correo</label>
                    <input type="email" id="email" name="CorreoElectronico" class="form-control" placeholder="Ingrese el correo" value="@Model.CorreoElectronico">
                </div>
                <div class="mb-3">
                    <label for="Contrasena" class="form-label" style="color: #003366;">Nueva Contraseña</label>
                    <input type="password" id="Contrasena" name="Contrasena" class="form-control" placeholder="Ingrese la nueva contraseña">
                </div>
                <button type="submit" class="btn w-100" style="background-color: #003366; color: #FFFFFF;">Guardar Cambios</button>
            </form>

        </div>
        <div class="card-footer text-center">
            <a asp-controller="Usuarios" asp-action="Usuarios" style="color: #66b2ff;">Cancelar</a>
        </div>
    </div>
</div>

<style>
    .modify-user-container {
        margin-top: 20px;
        background-color: #F8F9FA;
        display: flex;
        justify-content: center;
        align-items: start;
    }

    .card {
        border: 1px solid #E6E6E6;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #003366;
        color: #FFFFFF;
    }

    .btn {
        background-color: #003366;
        border: none;
    }

        .btn:hover {
            background-color: #66b2ff;
            transform: scale(1.05);
        }
</style>

            color: #212529;
        }

        .badge.bg-success {
            background-color: #28A745 !important;
            color: #FFFFFF;
        }

        .badge.bg-danger {
            background-color: #DC3545 !important;
            color: #FFFFFF;
        }

    .btn-group {
        display: flex;

        justify-content: center;
    }

    .pagination .page-item {
        margin: 2px;
    }

    .pagination .page-link {
        color: #003366 !important;
        background-color: #fff;
        border: 1px solid #003366;
        padding: 8px 12px;
        font-size: 14px;
        font-weight: bold;
        border-radius: 6px;
        transition: background-color 0.2s;
    }

    .pagination .active .page-link {
        background-color: #003366 !important;
        color: white !important;
    }

    .pagination .page-link:hover {
        background-color: #66b2ff !important;
        color: white !important;
    }

    .btn-warning,
    .btn-success,
    .btn-danger,
    .btn-outline-danger {
        height: 30px;
    }


    .table-responsive {
        width: 100%;
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
        margin-top: 10px;
        border-radius: 8px;
    }

    (max-width: 768px) {
        .table td, .table th

    {
        white-space: nowrap;
        font-size: 13px;
        padding: 8px;
    }

    .btn-sm {
        font-size: 12px;
        padding: 4px;
        width: auto;
        height: auto;
    }

    .pagination .page-link {
        padding: 6px 10px;
        font-size: 13px;
    }

    }
</style>

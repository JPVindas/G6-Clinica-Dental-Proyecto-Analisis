@model WebApplication1.Models.EmpleadosModel

@{
    ViewData["Title"] = "Editar Odontólogo";
}

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
        <div class="bg-white p-4 shadow-sm rounded">

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <form asp-action="GuardarEdicion" method="post" enctype="multipart/form-data" class="card shadow-lg p-4">
        <input type="hidden" asp-for="IdUsuario" />

        <div class="text-center mb-3">
            <label class="form-label"><i class="bi bi-image-fill"></i> Imagen Actual</label>
            <div>
                <img id="imgPreview" src="@Model.ImagenUrl ?? " https: //via.placeholder.com/150"" class="img-thumbnail" alt="Imagen del odontólogo" width="150">
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label"><i class="bi bi-upload"></i> Cambiar Imagen</label>
            <input type="file" class="form-control" name="ImagenArchivo" id="imagenInput" accept="image/*" onchange="previewImage(event)">
        </div>

        <div class="mb-3">
            <label class="form-label"><i class="bi bi-person-fill"></i> Nombre</label>
            <input asp-for="Nombre" class="form-control" required />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label"><i class="bi bi-person-lines-fill"></i> Apellidos</label>
            <input asp-for="Apellidos" class="form-control" required />
            <span asp-validation-for="Apellidos" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label"><i class="bi bi-envelope-fill"></i> Correo Electrónico</label>
            <input asp-for="Correo" class="form-control" type="email" required />
            <span asp-validation-for="Correo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label"><i class="bi bi-telephone-fill"></i> Teléfono</label>
            <input asp-for="Telefono" class="form-control" required />
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label"><i class="bi bi-hospital-fill"></i> Especialidad</label>
            <input asp-for="Especialidad" class="form-control" required />
            <span asp-validation-for="Especialidad" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label"><i class="bi bi-award-fill"></i> Años de Experiencia</label>
            <input asp-for="Experiencia" class="form-control" type="number" min="0" max="50" required />
            <span asp-validation-for="Experiencia" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-center gap-3">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check-circle-fill"></i> Guardar
            </button>
            <a asp-action="Odontologos" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle-fill"></i> Cancelar
            </a>
        </div>
    </form>
</div>


@model WebApplication1.Models.EmpleadosModel

@{
    ViewData["Title"] = "Eliminar Odontólogo";
}

<div class="container mt-5">
    <div class="card shadow-lg border-danger">
        <div class="card-header bg-danger text-white text-center">
            <h3><i class="bi bi-exclamation-triangle-fill"></i> Confirmar Eliminación</h3>
        </div>
        <div class="card-body text-center">
            <p class="lead">¿Estás seguro de que deseas eliminar este odontólogo?</p>

            <!-- Datos del odontólogo -->
            <h4 class="fw-bold">@Model.Nombre @Model.Apellidos</h4>
            <p class="text-muted"><i class="bi bi-envelope"></i> @Model.Correo</p>
            <p class="text-muted"><i class="bi bi-telephone"></i> @Model.Telefono</p>
            <p class="text-muted"><i class="bi bi-file-medical"></i> Especialidad: @Model.Especialidad</p>
            <p class="fw-bold text-danger"><i class="bi bi-award"></i> Años de Experiencia: @Model.Experiencia</p>

            <!-- Botones de confirmación -->
            <form asp-action="Eliminar" method="post">
                <input type="hidden" name="id" value="@Model.IdEmpleado" />

                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Sí, Eliminar
                </button>

                <a asp-action="Odontologos" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancelar
                </a>
            </form>
        </div>
    </div>
</div>

<!-- Estilos personalizados -->
<style>
    .container {
        max-width: 600px;
    }

    .card {
        border-radius: 10px;
    }

    .btn {
        transition: 0.3s;
    }

    .btn-danger:hover {
        background-color: #c82333;
        transform: scale(1.05);
    }

    .btn-secondary:hover {
        transform: scale(1.05);
    }
</style>

<!-- Importar Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

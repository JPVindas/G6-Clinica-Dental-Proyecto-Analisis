@model WebApplication1.Models.ServiciosModel

@{
    ViewData["Title"] = "Editar Servicio";
}

<h2 class="text-center">Editar Servicio</h2>

<div class="container">
    <div class="card shadow-lg p-4">
        <form asp-action="GuardarEdicion" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label">Nombre del Servicio</label>
                <input asp-for="Nombre" class="form-control" required />
            </div>

            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label">Descripción</label>
                <textarea asp-for="Descripcion" class="form-control"></textarea>
            </div>

            <div class="mb-3">
                <label asp-for="Costo" class="form-label">Costo</label>
                <input asp-for="Costo" class="form-control" type="number" step="0.01" required />
            </div>

            <div class="mb-3">
                <label asp-for="UrlImagen" class="form-label">URL de la Imagen</label>
                <input asp-for="UrlImagen" class="form-control" />
                <img src="@Model.UrlImagen" alt="Imagen del servicio" class="img-thumbnail mt-2" style="max-width: 200px;" />
            </div>

            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
            <a asp-action="Servicios" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>


@section Scripts {
    <script>
        document.getElementById("UrlImagen").addEventListener("input", function () {
            document.getElementById("imagenVistaPrevia").src = this.value;
        });
    </script>
}

@{
    ViewData["Title"] = "Recuperar Contraseña";
}

<div class="recover-container">
    <div class="recover-card shadow-lg">
        <div class="card-header text-center">
            <div class="tooth-animation mb-3">
                <img src="https://cdn-icons-png.flaticon.com/512/18470/18470477.png" alt="Ícono de Seguro Dental" width="60" />
            </div>


            <h2 class="text-white mb-1">Recuperar Contraseña</h2>
            <p class="subtitle">¿Olvidaste tu acceso? No te preocupes.</p>
        </div>

        <div class="card-body">
            <p class="instruction-text">
                Ingresa tu correo electrónico para restablecer tu contraseña. Te enviaremos una nueva contraseña temporal.
            </p>

            <form asp-action="RecuperarPassword" method="POST">
                <div class="form-group mb-3">
                    <label for="email">Correo Electrónico</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="ejemplo@correo.com" required>
                </div>

                <button type="submit" class="btn-login">Recuperar Contraseña</button>
            </form>

            @if (ViewBag.Mensaje != null)
            {
                <div class="alert alert-info mt-3">
                    @ViewBag.Mensaje
                </div>
            }
            else if (TempData["ErrorEmail"] != null)
            {
                <div class="alert alert-danger mt-3">
                    @TempData["ErrorEmail"]
                </div>
            }

            <hr class="my-4" />

            <div class="text-center text-muted small">
                🔒 Tu información está protegida con nosotros.
            </div>
        </div>

        <div class="card-footer text-center">
            <a asp-controller="Login" asp-action="Login" class="return-link">← Volver al Inicio de Sesión</a>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(to right, #003366, #005999);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .recover-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .recover-card {
        background-color: #ffffff;
        width: 100%;
        max-width: 430px;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    }

    .card-header {
        background-color: #003366;
        padding: 30px 20px 20px;
    }

    .card-header h2 {
        font-family: 'Merriweather', serif;
        font-size: 1.6rem;
        color: #ffffff;
    }

    .subtitle {
        font-size: 0.9rem;
        color: #cce6ff;
        margin-bottom: 0;
    }

    .card-body {
        padding: 25px;
        color: #003366;
    }

    .instruction-text {
        font-size: 0.95rem;
        color: #003366;
        text-align: center;
        margin-bottom: 20px;
    }

    .form-group label {
        font-weight: bold;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #ccc;
    }

    .btn-login {
        background-color: #003366;
        color: #ffffff;
        border: none;
        border-radius: 8px;
        width: 100%;
        padding: 12px;
        font-weight: bold;
        transition: background-color 0.3s, transform 0.2s;
    }

    .btn-login:hover {
        background-color: #005999;
        transform: scale(1.03);
    }

    .card-footer {
        padding: 20px;
        background-color: #f8f9fa;
    }

    .return-link {
        font-size: 0.9rem;
        color: #005999;
        font-weight: 600;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .return-link:hover {
        color: #003366;
        text-decoration: underline;
    }

    .alert {
        font-size: 0.9rem;
    }

    .tooth-animation img {
        animation: bounce-glow 2.5s infinite ease-in-out;
        filter: drop-shadow(0 0 8px #ffffff);
        transition: transform 0.3s ease;
    }

</style>

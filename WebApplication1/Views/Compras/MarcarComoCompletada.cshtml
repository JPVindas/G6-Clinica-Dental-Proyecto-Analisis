@model WebApplication1.Models.CompraModel

@{
    ViewData["Title"] = "Actualizar Estado de Compra";
}

<div class="container mt-5">
    <div class="card shadow-lg" style="border-radius: 10px;">
        <div class="card-header bg-primary text-white text-center" style="font-size: 1.5rem; font-family: 'Poppins', sans-serif;">
            ✅ Confirmar Actualización de Estado
        </div>
        <div class="card-body text-center" style="font-family: 'Poppins', sans-serif; color: #003366;">
            <h4 class="mb-4">Estás a punto de marcar esta compra como <strong>completada</strong>.</h4>
            <p><strong>ID Compra:</strong> @Model.IdCompra</p>
            <p><strong>Cliente:</strong> @Model.Paciente?.Nombre @Model.Paciente?.Apellidos</p>
            <p><strong>Fecha:</strong> @Model.FechaCompra.ToString("dd/MM/yyyy")</p>
            <p><strong>Monto Total:</strong> ₡@Model.MontoTotal.ToString("N2")</p>

            <form asp-action="MarcarComoCompletada" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="IdCompra" />
                <button type="submit" class="btn btn-success btn-lg mt-3">
                    <i class="bi bi-check-circle"></i> Confirmar
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg mt-3 ms-3">Cancelar</a>
            </form>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />

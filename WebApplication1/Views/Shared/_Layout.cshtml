            }

            .dropdown-menu {
                font-size: 0.95rem;
            }

            .main-header img {
                max-height: 55px;
            }
        }

        media screen and (max-width: 576px) {
            .btn,
            button {
                font-size: 0.9rem;
                padding: 8px 14px;
            }

            .pagination li a,
            .pagination li span {
                padding: 8px 12px;
                font-size: 14px;
            }

            .table-responsive {
                width: 100%;
                overflow-x: auto;
                -webkit-overflow-scrolling: touch;
                margin-top: 15px;

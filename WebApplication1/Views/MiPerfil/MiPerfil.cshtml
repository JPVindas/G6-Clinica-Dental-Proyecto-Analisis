@model WebApplication1.Models.PacientesModel

@{
    ViewData["Title"] = "Mi Perfil";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
        <strong>@TempData["SuccessMessage"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


@if (Model != null)
{
    <div class="jumbotron text-center">
        <h1 class="display-4">👤 Mi Perfil Personal</h1>
        <p class="lead">Administra y actualiza tu información fácilmente.</p>
    </div>

    <div class="container mt-5">
        <div class="card shadow-lg p-4">
            <div class="card-body">
                <h4 class="card-title text-primary">@Model.Nombre @Model.Apellidos</h4>
                <p><strong>Correo:</strong> @Model.Correo</p>
                <p><strong>Teléfono:</strong> @(string.IsNullOrWhiteSpace(Model.Telefono) ? "No registrado" : Model.Telefono)</p>
                <p><strong>Dirección:</strong> @(string.IsNullOrWhiteSpace(Model.Direccion) ? "No registrada" : Model.Direccion)</p>
                <p><strong>Fecha de Registro:</strong> @Model.FechaRegistro.ToString("dd/MM/yyyy")</p>

                <!-- ID oculto, útil si necesitás usarlo en formularios o scripts -->
                <input type="hidden" name="IdPaciente" value="@Model.IdPaciente" />

                <a asp-action="Editar" class="btn btn-primary mt-3">
                    <i class="bi bi-pencil-square"></i> Editar Perfil
                </a>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger text-center">
        No se encontró la información del paciente.
    </div>
}

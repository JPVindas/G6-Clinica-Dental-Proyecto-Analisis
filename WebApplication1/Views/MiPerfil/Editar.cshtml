@model WebApplication1.Models.PacientesModel

@{
    ViewData["Title"] = "Editar Perfil";
}

<div class="jumbotron text-center">
    <h1 class="display-4">Editar Perfil </h1>
</div>

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
        <div class="bg-white p-4 shadow-sm rounded">
            <form asp-action="Editar" method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label class="form-label">Nombre</label>
                    <input asp-for="Nombre" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Apellidos</label>
                    <input asp-for="Apellidos" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Correo Electrónico</label>
                    <input asp-for="Correo" type="email" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Teléfono</label>
                    <input asp-for="Telefono" class="form-control">
                </div>

                <div class="mb-3">
                    <label class="form-label">Dirección</label>
                    <textarea asp-for="Direccion" class="form-control"></textarea>
                </div>

                <button type="submit" class="btn btn-success">
                    <i></i> Guardar
                </button>
                <a asp-action="MiPerfil" class="btn btn-secondary">
                    <i></i> Volver
                </a>
            </form>
        </div>
    </div>
</div>
